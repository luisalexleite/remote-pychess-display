<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".login.RegisterActivity">
    <!--Back Button-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#242526"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/backbtn1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="fitXY"
                    android:tint="#de6262"
                    app:srcCompat="@drawable/back_button" />

                <ImageView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-50dp"
                    android:paddingTop="6dp"
                    android:text="RemotePyChess"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    app:srcCompat="@drawable/logo_ext" />
            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                android:scaleType="centerCrop"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/regis" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/registration"
                android:textColor="#FFFFFF"
                android:textSize="33sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="@string/create_your_account_with_your_email_and_a_password"
                android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="300dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="300dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icUserName"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="9dp"
                    android:paddingTop="12dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="9dp"
                    app:srcCompat="@drawable/ic_user" />

                <EditText
                    android:id="@+id/userNameText"
                    android:layout_width="316dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/username"
                    android:textColorHint="#ffffff"
                    android:layout_gravity="center"
                    android:backgroundTint="#FFFFFF"
                    android:inputType="text"
                    android:textColor="#FFFFFF"
                    tools:ignore="LabelFor" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="300dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="9dp"
                    android:paddingTop="12dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="9dp"
                    app:srcCompat="@drawable/ic_email" />
                <EditText
                    android:id="@+id/emailText"
                    android:layout_width="314dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:textColorHint="#ffffff"
                    android:layout_gravity="center"
                    android:backgroundTint="#FFFFFF"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFFFFF"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="300dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="9dp"
                    android:paddingTop="12dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="9dp"
                    app:srcCompat="@drawable/ic_pass" />
                <EditText
                    android:id="@+id/passText"
                    android:layout_width="314dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:textColorHint="#ffffff"
                    android:layout_gravity="center"
                    android:backgroundTint="#FFFFFF"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    tools:ignore="LabelFor" />

            </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:background="@drawable/roundedbutton"
                android:text="@string/create_account" />
        </LinearLayout>
    </ScrollView>

    <!--Animation-->
    <!--Text Views-->

    <!--Create Account Fields-->

    <!--Button Create Account-->
</androidx.constraintlayout.widget.ConstraintLayout>