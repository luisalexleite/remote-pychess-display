<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".GameActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/backBtnProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:contentDescription="@string/img_desc"
                android:scaleType="fitXY"
                android:layout_marginStart="3dp"
                android:tint="@color/colorAccent"
                android:padding="10dp"
                app:srcCompat="@drawable/back_button" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingTop="6dp"
                android:layout_marginLeft="-50dp"
                android:text="@string/Jogo"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="#de6262"
                android:textSize="30sp" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_vs1"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cavalo_brancas"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/cavalo_white" />

                <ImageView
                    android:id="@+id/cavalo_pretas"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-50dp"
                    android:layout_marginBottom="15dp"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/cavalo_black" />

                <ImageView
                    android:id="@+id/image_profile_game"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/demo_player"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/rating_game11"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:text="Rating:"
                    />

                <TextView
                    android:id="@+id/rating_game12"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:layout_marginTop="10dp"
                android:padding="30dp"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cavalo_brancas2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/cavalo_white" />

                <ImageView
                    android:id="@+id/cavalo_pretas2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:layout_marginTop="-50dp"
                    android:layout_marginBottom="15dp"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/cavalo_black" />

                <ImageView
                    android:id="@+id/image_profile_game2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/demo_player"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/rating_game21"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:text="@string/find_rating"
                    />

                <TextView
                    android:id="@+id/rating_game22"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Blacks" />

            <CheckBox
                android:id="@+id/checkWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="Whites"  />

            <CheckBox
                android:id="@+id/checkRandom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="Random" />


        </LinearLayout>

        <Button
            android:id="@+id/createGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundedbutton"
            android:text="Começar Jogo" />
        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text=""
            android:textSize="18sp"  />

        <TextView
            android:id="@+id/espera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_marginBottom="40dp"
            android:text="À espera de um adversário..."
            android:textColor="@color/white"
            android:textSize="24sp"  />

        <ImageButton
            android:id="@+id/btnSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="3"
            android:visibility="gone"
            android:scaleY="3"
            android:layout_gravity="center"
            android:background="@drawable/ic_settings"/>

        <Button
            android:id="@+id/addJogada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundedbutton"
            android:text="Adicionar jogada" />

        <Button
            android:id="@+id/giveUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundedbutton"
            android:text="Desistir" />

        <TextView
            android:id="@+id/movesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="40dp"
            android:text=""
            android:textSize="18sp"  />

    </LinearLayout>

</RelativeLayout>