<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d2f30"
    tools:context=".profile.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#242526"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/backBtnProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:contentDescription="@string/img_desc"
            android:scaleType="fitXY"
            android:layout_marginStart="3dp"
            android:tint="#de6262"
            android:padding="10dp"
            app:srcCompat="@drawable/back_button" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingTop="6dp"
            android:text="@string/profile"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="#de6262"
            android:textSize="30sp" />

            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:contentDescription="@string/img_desc"
                android:scaleType="fitXY"
                android:layout_marginStart="3dp"
                android:padding="11dp"
                app:srcCompat="@drawable/ic_edit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#242526"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:padding="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <!--Image-->
            <ImageButton
                android:id="@+id/image_sitter"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/demo_player"
                android:contentDescription="@string/testPetsitterDescriptionImage"
                android:scaleType="centerCrop" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:textSize="26sp"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        tools:ignore="NestedWeights" />


                </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="28dp"
            android:background="#2d2f30"
            android:layout_height="wrap_content">



            <!--Email-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:text="@string/name"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/name_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:textSize="15sp" />
            </LinearLayout>
            <!--Email-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:text="@string/petsitter_email"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/email_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:textSize="15sp" />
            </LinearLayout>



            <!--Rating-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:text="@string/rating"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:textSize="15sp" />
            </LinearLayout>


    </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>