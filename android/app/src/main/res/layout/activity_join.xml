<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".JoinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/backBtnProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:contentDescription="@string/img_desc"
            android:scaleType="fitXY"
            android:layout_marginStart="3dp"
            android:tint="@color/colorAccent"
            android:padding="10dp"
            app:srcCompat="@drawable/back_button" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingTop="6dp"
            android:layout_marginLeft="-50dp"
            android:text="@string/join"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />



    </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_v2"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cavalo_brancas"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/cavalo_white" />

                <ImageView
                    android:id="@+id/cavalo_pretas"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:layout_marginTop="-50dp"
                    android:layout_marginBottom="15dp"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/cavalo_black" />

                <ImageView
                    android:id="@+id/image_profile_game"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/demo_player"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="centerCrop" />



                <TextView
                    android:id="@+id/rating_join"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="@string/rating2"
                    />

                <TextView
                    android:id="@+id/rating_game"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/vs"
                android:padding="30dp"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cavalo_brancas2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/cavalo_white" />

                <ImageView
                    android:id="@+id/cavalo_pretas2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-50dp"
                    android:layout_marginBottom="15dp"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/cavalo_black" />

                <ImageView
                    android:id="@+id/image_profile_game2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/demo_player"
                    android:contentDescription="@string/img_desc"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/rating_join2"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="@string/find_rating"
                    />

                <TextView
                    android:id="@+id/rating_game2"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/lista_jogos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:text="@string/list" />

        <Button
            android:id="@+id/joinGame2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundedbutton2"
            android:padding="10dp"
            android:text="@string/join" />

        <TextView
            android:id="@+id/tvText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text=""
            android:textSize="18sp"  />

        <ImageButton
            android:id="@+id/btnSpeak2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="3"
            android:visibility="invisible"
            android:scaleY="3"
            android:layout_gravity="center"
            android:background="@drawable/ic_settings"/>

        <Button
            android:id="@+id/addJogada2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundedbutton2"
            android:padding="10dp"
            android:text="@string/addplay" />

        <Button
            android:id="@+id/giveUp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundedbutton2"
            android:padding="10dp"
            android:text="@string/giveup" />

        <TextView
            android:id="@+id/movesText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="40dp"
            android:text=""
            android:textSize="18sp"  />

        <TextView
            android:id="@+id/win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="18sp"  />

        <TextView
            android:id="@+id/lost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:textAlignment="center"
            android:text=""
            android:textSize="18sp"  />

        <Button
            android:id="@+id/leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundedbutton2"
            android:padding="10dp"
            android:text="@string/leave" />




    </LinearLayout>
</RelativeLayout>