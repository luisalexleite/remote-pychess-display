<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".profile.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/backBtnProfileEdit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:contentDescription="@string/img_desc"
            android:scaleType="fitXY"
            android:layout_marginStart="3dp"
            android:padding="10dp"
            app:srcCompat="@drawable/back_button"
            app:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingTop="6dp"
            android:text="@string/profile_edit_title"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="26sp" />

            <ImageButton
                android:id="@+id/submitButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:contentDescription="@string/img_desc"
                android:layout_marginStart="3dp"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_check" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/btnImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/profile_Image"
            android:textAlignment="textStart"
            android:gravity="center"
            tools:ignore="NestedWeights,RtlCompat" />

        <!--Pet Sitter Image-->
            <ImageView
                android:id="@+id/image_profile_edit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/demo_player"
                android:scaleType="centerCrop"
                android:contentDescription="@string/img_desc" />


    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/border_bot">

        </TextView>
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <!--Email-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:text="@string/username"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/username_edit_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/textColor"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:autofillHints=""
                    android:inputType="text"
                    tools:ignore="LabelFor" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/border_bot">

            </TextView>

            <!--Phone-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:text="@string/first_name"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="0dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/textColor"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:autofillHints=""
                    tools:ignore="LabelFor" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/border_bot">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="@string/last_name"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/lName_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:inputType="text"
                    android:textColor="@color/textColor"
                    android:padding="10dp"
                    android:textSize="15sp"
                    tools:ignore="LabelFor,TextFields"
                    android:autofillHints="" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/border_bot">

            </TextView>

            <!--Phone-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/email"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/email_edit"
                    android:layout_width="0dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/textColor"
                    android:autofillHints=""
                    android:inputType="textEmailAddress"
                    tools:ignore="LabelFor" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/border_bot">

            </TextView>


    </LinearLayout>
    </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>